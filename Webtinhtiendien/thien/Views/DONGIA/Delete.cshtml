@model namj.Models.DonGia

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        h4 {
            font-size: 24px; /* Đặt kích thước chữ cho phần tử <h4> */
        }

        h5 {
            font-size: 24px;
        }

        dl {
            font-size: 18px; /* Đặt kích thước chữ cho phần tử <dl> */
        }

        dt {
            font-weight: bold; /* Đặt đậm cho phần tử <dt> */
        }

        dd {
            margin-left: 0; /* Xóa margin trái của phần tử <dd> */
            margin-bottom: 10px; /* Thêm margin dưới cho phần tử <dd> */
        }
        .button {
            padding: 12px 24px;
            margin-left: 13px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            background-color: black;
            color: #fff;
            text-transform: uppercase;
            transition: background-color 0.2s ease-in-out;
            cursor: pointer
        }

            .button:hover {
                background-color: #ccc;
                color: black;
            }
    </style>
</head>
<body>
    <h3>Bạn có chắc chắn muốn xóa?</h3>
    <div>
        <h4>Thông Tin Đơn Giá</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.MaDonGia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaDonGia)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SoTien)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoTien)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TuKW)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TuKW)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DenKW)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DenKW)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GhiChu)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GhiChu)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>
                <h5><b> Đơn giá : </b></h5><input type="text" name="txtMaDonGia" value="@Html.DisplayFor(Model => Model.MaDonGia)" />
            </div>

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="button" /> |
                @Html.ActionLink("Trở Về Trang Chính", "Index")
            </div>
        }
    </div>
</body>
</html>
