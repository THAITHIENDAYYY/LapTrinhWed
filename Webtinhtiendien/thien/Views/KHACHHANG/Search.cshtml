@model IEnumerable<namj.Models.KhachHang>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid black;
            padding: 6px;
            text-align: left;
        }

        th {
            background-color: deepskyblue;
        }

        tr:nth-child(even) {
            background-color: #aaa;
        }
    </style>
</head>
<body>
   
    @using (Html.BeginForm("Search", "KHACHHANG"))
    {
        <div class="form-group">
            <label for="name">Tìm kiếm theo:</label>
            @Html.RadioButton("searchString", "MaKH") Mã Khách Hàng
            @Html.RadioButton("searchString", "DiaChi") Địa chỉ
            @Html.RadioButton("searchString", "SoDienThoai") Số Điện Thoại
            @Html.TextBox("search")
        </div>

        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        <button type="button" onclick="location.href='@Url.Action("Index", "KHACHHANG")'">
            Trở lại trang chính
        </button>
        <button type="button" onclick="location.href='@Url.Action("Search", "KHACHHANG")'">
            Trở Về
        </button>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaKH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { makh = item.MaKH }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { makh = item.MaKH }) |
                    @Html.ActionLink("Xóa", "Delete", new { makh = item.MaKH })
                </td>
            </tr>
        }

    </table>

</body>
</html>
