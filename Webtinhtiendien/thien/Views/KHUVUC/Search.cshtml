@model IEnumerable<namj.Models.KhuVuc>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid black;
            padding: 6px;
            text-align: left;
        }

        th {
            background-color: deepskyblue;
        }

        tr:nth-child(even) {
            background-color: #aaa;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Search", "KHUVUC"))
    {
        <div class="form-group">
            <label for="name">Tìm kiếm theo:</label>
            @Html.RadioButton("searchString", "MaKhuVuc") Mã Khu Vực
            @Html.RadioButton("searchString", "TenKhuVuc") Tên Khu Vực
            @Html.RadioButton("searchString", "QuanHuyen") Quận Huyện
            @Html.TextBox("search")
        </div>

        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        <button type="button" onclick="location.href='@Url.Action("Index", "KHUVUC")'">
            Trở lại trang chính
        </button>
        <button type="button" onclick="location.href='@Url.Action("Search", "KHUVUC")'">
            Trở về
        </button>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaKhuVuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenKhuVuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuanHuyen)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKhuVuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenKhuVuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuanHuyen)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { makv = item.MaKhuVuc }) |
                    @Html.ActionLink("Chi Tiết", "Details", new { makv = item.MaKhuVuc }) |
                    @Html.ActionLink("Xóa", "Delete", new { makv = item.MaKhuVuc })
                </td>
            </tr>
        }



    </table>

</body>
</html>
